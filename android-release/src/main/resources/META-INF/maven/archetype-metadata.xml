<archetype-descriptor xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0 http://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd"
  name="android-release">

  <requiredProperties>
    <requiredProperty key="platform" >
      <defaultValue>7</defaultValue>
    </requiredProperty>
    <requiredProperty key="emulator">
      <defaultValue>not-specified</defaultValue>
    </requiredProperty>
    <requiredProperty key="plugin-version">
      <defaultValue>2.8.4</defaultValue>
    </requiredProperty>
  </requiredProperties>

  <fileSets>
    <!-- Key Store -->
    <fileSet filtered="false">
      <directory></directory>
      <includes>
          <include>test-key.keystore</include>
      </includes>
    </fileSet>

    <!-- application -->
    <fileSet filtered="true" packaged="true" encoding="UTF-8">
      <directory>application/src/main/java</directory>
      <includes>
        <include>**/*.java</include>
      </includes>
    </fileSet>
    <fileSet filtered="true" encoding="UTF-8">
      <directory>application/res</directory>
      <includes>
        <include>**/*.xml</include>
      </includes>
    </fileSet>
    <fileSet filtered="false" encoding="UTF-8">
      <directory>application/res</directory>
      <includes>
        <include>**/*.png</include>
      </includes>
    </fileSet>
    <fileSet filtered="false" encoding="UTF-8">
      <directory>application/assets</directory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
    <fileSet filtered="true" encoding="UTF-8">
      <directory>application</directory>
      <includes>
        <include>*.xml</include>
        <include>*.conf</include>
      </includes>
    </fileSet>
    <fileSet filtered="true" encoding="UTF-8">
      <directory>application</directory>
      <includes>
        <include>*.properties</include>
      </includes>
    </fileSet>

    <!-- it -->
    <fileSet filtered="true" packaged="true" encoding="UTF-8">
      <directory>application-it/src/main/java</directory>
      <includes>
        <include>**/*.java</include>
      </includes>
    </fileSet>
    <fileSet filtered="true" encoding="UTF-8">
      <directory>application-it/res</directory>
      <includes>
        <include>**/*.xml</include>
      </includes>
    </fileSet>
    <fileSet filtered="false" encoding="UTF-8">
      <directory>application-it/res</directory>
      <includes>
        <include>**/*.png</include>
      </includes>
    </fileSet>
    <fileSet filtered="true" encoding="UTF-8">
      <directory>application-it</directory>
      <includes>
        <include>*.xml</include>
      </includes>
    </fileSet>
    <fileSet filtered="true" encoding="UTF-8">
      <directory>application-it</directory>
      <includes>
        <include>*.properties</include>
      </includes>
    </fileSet>
  </fileSets>
</archetype-descriptor>
